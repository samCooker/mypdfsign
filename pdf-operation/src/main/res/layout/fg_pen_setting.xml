<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pensetting"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/pdf_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:background="@android:color/white" >

        <cn.com.chaochuang.pdf_operation.ui.PenWidthView
            android:id="@+id/tv_width_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_pen_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />

        <SeekBar
            android:id="@+id/sb_pen_width"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gv_pen_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:numColumns="5" />

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_setting_cancel"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:background="@color/pdf_btn_white"
            android:text="取  消"
            android:textColor="@color/pdf_btn_assertive"
            android:textSize="18sp"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/btn_setting_ok"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="确  定"
            android:textColor="@color/pdf_btn_white"
            android:background="@color/pdf_btn_primary"
            android:textSize="18sp"
            android:layout_height="60dp"/>
    </LinearLayout>

</LinearLayout>