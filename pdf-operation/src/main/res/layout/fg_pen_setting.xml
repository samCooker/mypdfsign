            <!--<RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="笔  刷  " android:id="@+id/rg_pen_brush" android:drawableRight="@drawable/pen_waterpen"/>-->
        <!--</RadioGroup>-->
    <!--</LinearLayout>-->

    <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Switch
                android:text="手写笔输入"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sw_pen_only"/>
    </LinearLayout>

    <GridView
            android:id="@+id/gv_pen_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="5"
