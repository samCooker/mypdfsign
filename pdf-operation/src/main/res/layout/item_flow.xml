<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    >
    <LinearLayout
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="1"
            android:id="@+id/tv_no"
            android:background="@drawable/shape_flow_no"
            android:layout_marginEnd="10dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_width="@dimen/doc_flow_no"
            android:layout_height="@dimen/doc_flow_no"/>
        <TextView
            android:id="@+id/tv_node_name"
            android:textSize="16dp"
            android:text="拟稿"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/shape_flow_node"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/doc_flow_node_height"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_opinion"
            android:text="同意"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_weight="1"
            android:textSize="16dp"
            android:text="用户"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="16dp"
            android:text="2020-08-12 12:10"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>