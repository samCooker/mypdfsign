<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_attach"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/pdf_bg"
    android:orientation="vertical" >
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_loading"
        android:padding="10dp"
        />
    <ScrollView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ListView
            android:id="@+id/list_view_attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_setting_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pdf_dlg_btn_height"
            android:background="@color/pdf_btn_white"
            android:text="关  闭"
            android:textColor="@color/pdf_btn_assertive"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>